	{
		
	}
	else if (info->pt_n == 1)
	{
	
	}
	else if (info->n_pt_n == 1)
	{
	
	}

}

void	ft_print_nbr(t_info *info, char *str)
{
	int i;
	int len;

	i = -1;
	len = 0;
	while(str[++i])
	{
		if (str[i] != '*')
			len++;
	}
	i = 0;
	if (info->n_pt == 1 || info->pt_n == 1 || info->n_pt_n == 1)
		ft_print_pt(info, str);
	if (info->flag->minus == '-')
	{
		if (info->sign == 1)
			info->count += ft_putchar('-');
		if (info->iszero == 1)
			info->count += ft_putchar('0');
		while (*str)
		{
			if (*str != '*')
				info->count += ft_putchar(*str); 
			str++;
		}
		while (len++ < info->field_width)
			info->count += ft_putchar(' ');
	} 
	else
	{
		while (len++ < info->field_width)
				info->count += ft_putchar(' ');
		if (info->isp == 1)
		{
			info->count += ft_putchar('0');
			info->count += ft_putchar('x');
		}
		if (info->sign == 1)
			info->count += ft_putchar('-');
		if (info->iszero == 1)
			info->count += ft_putchar('0');
		while (*str)
		{
			if (*str != '*')
				info->count += ft_putchar(*str); 
			str++;
		}
	}	
}
